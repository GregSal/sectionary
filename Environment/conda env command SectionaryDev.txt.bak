########## Creation command ############
conda create -n sectionary python=3.8
conda activate sectionary 
conda install pandas openpyxl jupyterlab xlwings sphinx
python -m ipykernel install --user --name sectionary --display-name "Python (sectionary)"

########## Export command ############
conda env export > sectionary_FULL.yml
conda env export --from-history > C:\TEMP\sectionary.yml
conda list --explicit > C:\TEMP\sectionary_specfile.txt


########## Install command ############
conda create --name sectionary --file sectionary_specfile.txt

conda env create --name variandb_relations --file=C:\TEMP\sectionary_FULL.yml

########### Related Commands  ##########
conda config --append channels conda-forge

conda activate sectionary


